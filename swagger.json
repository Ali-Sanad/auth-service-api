{
  "openapi": "3.0.2",
  "info": {
    "title": "Auth Service API",
    "description": "A simple Express auth service API to authenticate and authorize users",
    "version": "1.0.0"
  },

  "paths": {
    "/api/v1/auth/signup": {
      "post": {
        "tags": ["Auth"],
        "description": "Create new user in system",
        "requestBody": {
          "content": {
            "application/json": {
              "example": {
                "name": "ali",
                "email": "ali@ali.com",
                "password": "123456"
              },
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "New user is created"
          }
        }
      }
    },
    "/api/v1/auth/login": {
      "post": {
        "tags": ["Auth"],
        "description": "Login user in system",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "example": {
                "email": "ali@ali.com",
                "password": "123456"
              },
              "schema": {
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": ""
          }
        }
      }
    },
    "/api/v1/auth/me": {
      "get": {
        "tags": ["Auth"],
        "description": "Get user info",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": ""
          }
        }
      }
    },

    "/api/v1/auth/log-out": {
      "post": {
        "tags": ["Auth"],
        "description": "Logout user in system",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": ""
          }
        }
      }
    },
    "/api/v1/auth/refresh-token": {
      "get": {
        "tags": ["Auth"],
        "description": "Refresh token",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": ""
          }
        }
      }
    },
    "/api/v1/auth/users": {
      "get": {
        "tags": ["Auth"],
        "description": "Get all users",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": ""
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "required": ["name", "email", "password"],
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "role": {
            "type": "string"
          }
        }
      }
    },

    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
